@using Microsoft.AspNetCore.Identity
@using NYBE.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Profile" asp-action="Index" title="Manage"><i class="glyphicon glyphicon-user" style="font-size:20px;"></i></a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="glyphicon glyphicon-cog" style="font-size:20px;"></i></a>
            </li>
            <li>
                <button type="submit" class="btn btn-primary navbar-btn">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="btn-toolbar" role="button">
            <button onclick="location.href = '/Account/Register'" class="btn btn-primary navbar-btn">Register</button>
            <button onclick="location.href = '/Account/Login'" class="btn btn-success navbar-btn">Log in</button>
        </li>
    </ul>
}
