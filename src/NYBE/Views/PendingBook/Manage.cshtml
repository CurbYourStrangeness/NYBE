@model NYBE.Models.AdminViewModels.ManageBooksViewModel
@{
    ViewData["Title"] = "Manage Books";
}

<h1>Manage Books</h1>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#pending">Pending Books</a></li>
    <li><a data-toggle="tab" href="#all">All Books</a></li>
    @if (Model.disabledBooks.Any())
    {
    <li><a data-toggle="tab" href="#disabled">Disabled Books</a></li>
    }
</ul>
<div class="tab-content">
    <div id="pending" class="tab-pane fade in active">
        @if (Model.pendingBooks.Any())
        {
            <div class="container">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>ISBN</th>
                                <th>Edition</th>
                                <th>Publisher</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (PendingBook book in Model.pendingBooks)
                {
                                <tr>
                                    <td>@book.Title</td>
                                    <td>@book.AuthorFName @book.AuthorLName</td> <!--Assume users only have one role-->
                                    <td>@book.ISBN</td>
                                    <td>@book.Edition</td>
                                    <td>@book.Publisher</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-controller="PendingBook" asp-action="ViewBook" asp-route-id="@book.ID" class="btn btn-primary">View Book</a>
                                            <a asp-controller="PendingBook" asp-action="Approve" asp-route-id="@book.ID" class="btn btn-success">Approve</a>
                                            <a asp-controller="PendingBook" asp-action="Deny" asp-route-id="@book.ID" class="btn btn-danger">Deny</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        else
        {
            <h4>Currently no Pending Books!</h4>
        }
    </div>
    <div id="all" class="tab-pane fade">
        <div class="container">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>Edition</th>
                            <th>Publisher</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Book book in Model.allBooks)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.AuthorFName @book.AuthorLName</td> <!--Assume users only have one role-->
                                <td>@book.ISBN</td>
                                <td>@book.Edition</td>
                                <td>@book.Publisher</td>
                                <td><a asp-controller="PendingBook" asp-action="Disable" asp-route-id="@book.ID" class="btn btn-success">Disable</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div id="disabled" class="tab-pane fade">
        <div class="container">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>ISBN</th>
                            <th>Edition</th>
                            <th>Publisher</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Book book in Model.disabledBooks)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.AuthorFName @book.AuthorLName</td> <!--Assume users only have one role-->
                                <td>@book.ISBN</td>
                                <td>@book.Edition</td>
                                <td>@book.Publisher</td>
                                <td><a asp-controller="PendingBook" asp-action="Enable" asp-route-id="@book.ID" class="btn btn-success">Enable</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
