@model NYBE.Models.AdminViewModels.ManageUsersViewModel
@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>School</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0; }
                @foreach(ApplicationUser user in Model.users)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@Model.roles[i]</td> <!--Assume users only have one role-->
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.School.Name</td>
                        <td>@user.Rating</td>
                        <td><a asp-controller="User" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-success">Edit</a></td>
                        <td><a asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model.disabledUsers.Any())
{
    <h3>Disabled Users</h3>
    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>School</th>
                        <th>Rating</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (ApplicationUser user in Model.disabledUsers)
                {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.School.Name</td>
                            <td>@user.Rating</td>
                            <td><a asp-controller="User" asp-action="ActivateUser" asp-route-id="@user.Id" class="btn btn-success">Activate</a></td>

                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
                        }