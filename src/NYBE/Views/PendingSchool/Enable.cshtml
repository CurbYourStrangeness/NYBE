@model  NYBE.Models.SchoolViewModels.PendingSchoolViewModel

@{
    ViewData["Title"] = "Enable School";
}

<h2>Enable School</h2>

<h3>Are you sure you want to re-enable this school?</h3>
<div>
    <h4><b>Name:</b> @Model.name</h4>
    <p><b>City:</b> @Model.city</p>
    <p><b>State:</b> @Model.state</p>
    <form asp-controller="PendingSchool" asp-action="Enable">
        <div class="form-actions no-color">
            <a asp-action="Manage" class="btn btn-default">Cancel</a>
            <input type="submit" value="Enable" class="btn btn-success" />
        </div>
    </form>
</div>