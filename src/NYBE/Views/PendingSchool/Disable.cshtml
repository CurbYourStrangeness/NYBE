@model  NYBE.Models.SchoolViewModels.PendingSchoolViewModel

@{
    ViewData["Title"] = "Disable School";
}

<h2>Disable School</h2>

<h3>Are you sure you want to disable this school?</h3>
<div>
    <h4><b>Name:</b> @Model.name</h4>
    <p><b>City:</b> @Model.city</p>
    <p><b>State:</b> @Model.state</p>
    <form asp-controller="PendingSchool" asp-action="Disable">
        <div class="form-actions no-color">
            <a asp-action="Manage" class="btn btn-default">Cancel</a>
            <input type="submit" value="Disable" class="btn btn-danger" />
        </div>
    </form>
</div>