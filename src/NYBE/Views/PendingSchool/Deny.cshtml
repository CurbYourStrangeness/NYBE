@model  NYBE.Models.SchoolViewModels.PendingSchoolViewModel

@{
    ViewData["Title"] = "Deny Pending School";
}

<h2>Deny School</h2>

<h3>Are you sure you want to deny this school request?</h3>
<div>
    <h4><b>Name:</b> @Model.name</h4>
    <p><b>City:</b> @Model.city</p>
    <p><b>State:</b> @Model.state</p>
    <form asp-controller="PendingSchool" asp-action="Deny">
        <div class="form-actions no-color">
            <a asp-action="Manage" class="btn btn-default">Cancel</a>
            <input type="submit" value="Deny" class="btn btn-danger" />
        </div>
    </form>
</div>